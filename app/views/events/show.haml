- content_for :title do
  = @event.title
= render partial: 'fb_meta'
= render partial: 'layouts/breadcrumb'

.row
  .col-lg-8
    .box-white
      .lead
        = flag_icon(:br)
        = @event.title
      %p.text-right.small
        = format_date @event.date_start
        - if @event.date_end > @event.date_start
          ĝis #{format_date @event.date_end}
      %p= @event.description
      %p= raw @event.content

      - if @event.site.present?
        %p <strong>Retpaĝo: </strong> #{link_to @event.site, @event.site, target: :_blank}
      - if @event.email.present?
        %p <strong>Kontakto: </strong> #{mail_to @event.email, @event.email, subject: "Informoj pri la evento #{@event.title}" }

      = render partial: 'uploads'
      - if user_signed_in? && (current_user.is_owner_of(@event) || current_user.admin?)
        .buttons-footer
          = link_to 'Redakti eventon', edit_event_path(@event.code), class: 'btn btn-sm btn-outline-primary'

  .col-lg-4
    = render partial: 'informoj'
