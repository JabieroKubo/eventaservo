.col-lg-6.offset-lg-3
  .box-white
    .lead Nova konto
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      .form-group
        = f.label :name, 'Nomo'
        = f.text_field :name, autocomplete: 'name', class: 'form-control', autofocus: true
      .form-group
        = f.label :email, 'Retadreso'
        = f.email_field :email, autocomplete: 'email', class: 'form-control'

      .row
        .col-lg-6.col-12
          .form-group
            = f.label :city, 'Urbo'
            = f.text_field :city, autocomplete: 'city', class: 'form-control'
        .col-lg-6
          .form-group
            = f.label :country_id, 'Lando'
            = f.select(:country_id, options_from_collection_for_select(Country.all, 'id', 'name'), {}, class: 'form-control select2')


      .row
        .col-md-6
          .form-group
            = f.label :password, 'Pasvorto'
            = f.password_field :password, autocomplete: 'new-password', class: 'form-control'
            %small.form-text.text-muted Minimumo 6 karakteoj
        .col-md-6
          .form-group
            = f.label :password_confirmation, 'Pasvorto konfirma'
            = f.password_field :password, autocomplete: 'new-password', class: 'form-control'
      .buttons-footer
        = f.submit 'Registri', class: 'btn btn-sm btn-success'

    = render partial: 'devise/shared/links'
