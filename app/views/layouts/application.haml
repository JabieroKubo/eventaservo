!!!
%html{:lang => 'en'}
  %head
    = render partial: 'layouts/google_analytics' if Rails.env.production?
    %meta{:content => 'text/html; charset=UTF-8', 'http-equiv' => 'Content-Type'}/
    %meta{:charset => 'utf-8'}/
    %meta{:content => 'width=device-width, initial-scale=1, shrink-to-fit=no', :name => 'viewport'}/

    -# Facebook informoj
    = render partial: 'layouts/facebook' # Ĉu vere necesas?
    %meta{content: 'Eventa Servo', property: 'og:site_name'}
    %meta{content: '243701312975059', property: 'fb:app_id'}
    = yield(:head) if content_for?(:head)

    %title Eventa Servo
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    = render partial: 'layouts/navbar'
    .container-fluid
      -#.alert-box
        -#%p.notice= notice
        -#%p.alert= alert
      = yield
      .row
      - flash.each do |key, value|
        #flash{class: "flash-alert-box alert #{flash_class(key.to_sym)}", role: 'alert', style: ''}
          %button.close{'data-dismiss' => 'alert', type: 'button'}
            %span{'aria-hidden' => 'true'} ×
            %span.sr-only Close
          = value
    %br
    = render partial: 'layouts/footer'

