- content_for :title do
  = @event.title

- content_for :head do
  -# Facebook OpenGraph informoj
  %meta{content: request.original_url, property: 'og:url'}
  %meta{content: 'article', property: 'og:type'}
  %meta{content: @event.title, property: 'og:title'}
  %meta{content: @event.description, property: 'og:description'}

.box-white
  = render partial: 'layouts/breadcrumb'
  .row
    .col-lg-8
      .box-white
        .lead= @event.title
        %p.text-right= format_date(@event.date_start)
        %p= @event.description
        %p= markdown(@event.content)

        - if @event.site.present?
          %p <strong>Retpaƒùo: </strong> #{link_to @event.site, @event.site, target: :_blank}
        - if @event.email.present?
          %p <strong>Kontakto: </strong> #{mail_to @event.email, @event.email, subject: "Informoj pri la evento #{@event.title}" }

        = render partial: 'fotoj'
        = render partial: 'dokumentoj'
        - if user_signed_in? && (current_user.is_owner_of(@event) || current_user.admin?)
          .buttons-footer
            = link_to 'Redakti eventon', edit_event_path(@event.code), class: 'btn btn-sm btn-outline-primary'

    .col-lg-4
      = render partial: 'informoj'
      = render partial: 'aldonilo'
