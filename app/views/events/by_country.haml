- content_for :title do
  = @country.name

.box-white
  = render partial: 'layouts/breadcrumb'
  = display_event_list_style_chooser

  .lead Eventoj la≈≠ urboj
  - @cities.each do |city|
    = link_to events_by_city_path(@country.name, city.name), class: 'button-event-count' do
      = city.name
      %span.badge.badge-primary= city.count

  = display_events_by_style
