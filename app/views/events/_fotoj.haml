- if @event.attachments.present? && @event.attachments.images.present?
  .lead Fotoj
  .row
    - @event.attachments.images.each do |image_file|
      .col-12.col-sm-3.mb-3
        .card.bg-dark.text-white
          = link_to image_file.file.url do
            = image_tag image_file.file.thumb.url, class: 'card-img-top', size: '128'

        - if user_signed_in? && current_user.is_owner_of(@event)
          .text-center
            = link_to icon('far', 'trash-alt', 'Forigi'), attachment_destroy_path(image_file), method: :delete, data: { confirm: 'Äˆu vi certas?' }, class: 'btn btn-sm btn-outline-link'
